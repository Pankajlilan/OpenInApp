<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set radius only on bottom right and bottom left -->
    <corners android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="@dimen/margin_small"
        android:bottomRightRadius="@dimen/margin_small" />

    <!-- Background color -->
    <solid android:color="#E8F1FF" />

    <stroke
        android:width="1dip"
        android:color="#660e6fff"
        android:dashWidth="3dp"
        android:dashGap="2dp" />
</shape>
